# Environment
ENVIRONMENT=development
DEBUG=True

# Server
HOST=0.0.0.0
PORT=8000

# Database (for future use)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/nyc_transport

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Uber API
UBER_CLIENT_ID=your_uber_client_id_here
UBER_CLIENT_SECRET=your_uber_client_secret_here

# Lyft API
LYFT_CLIENT_ID=your_lyft_client_id_here
LYFT_CLIENT_SECRET=your_lyft_client_secret_here

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json